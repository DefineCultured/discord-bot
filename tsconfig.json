{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "noUnusedParameters": true,
    "types": ["node"],
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}